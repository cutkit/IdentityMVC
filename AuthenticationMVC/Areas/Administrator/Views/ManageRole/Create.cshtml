@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Tạo role";
}

<h2>Tạo role</h2>
<div class="row">
    <div class="col-md-8 bg-info form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(x => x.Id, new { @class = "col-md-2 form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", Required = "requied" })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "col-md-2 form-label" })
                <div class="col-md-10"> @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })</div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10"><input class="btn btn-default" type="submit" name="name" value="Tạo role" /></div>
            </div>
        }
    </div>
</div>

