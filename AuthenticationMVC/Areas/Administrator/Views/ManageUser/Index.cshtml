@using AuthenticationMVC.Models;
@model IEnumerable<AuthenticationMVC.Models.ApplicationUser>
@{
    ViewBag.Title = "Quản lý thành viên";
}

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewBag.Title</h2>
        <hr />
        <table class="table table-borderer">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Điện Thoại</th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        
                        <td>
                            @Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |
                            @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |
                            @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
